{% extends 'base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
        <a class='btn btn-primary' href="{{ path('app_admin_user_new') }}">Enregistrer un nouvel utilisateur</a>
<ul>
{% for user in users %}
    <li><a href=" {{ path('app_admin_user_show',{"id":user.id}) }}" >{{user.email}}</a> {{user.roles[0]}}</li>
    {% if user.enable == true %}
    <li>Actif</li>
    {% else %}
    <li>Innactif</li>
    {% endif %}
{% endfor %}
</ul>

{% endblock %}
